@page
@model TechStore.UI.Areas.Identity.Pages.Account.LoginModel
@{
      ViewData["Title"] = "Log in";
}
<center>
<div class="login-container">
    <form id="account" method="post">
        <h4>Log In</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating" style="margin:10px">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" area-required="true" />
            <label asp-for="Input.Email" class="form-label"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating" style="margin:10px">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" area-required="true" />
            <label asp-for="Input.Password" class="form-label"></label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div style="margin:10px">
            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
        </div>
    </form>
</div>
</center>